# Close Call Database - Local Development Configuration
# File: /etc/nginx/sites-available/closecall-local

# Upstream for local development
upstream closecall_local {
    server 127.0.0.1:8000 fail_timeout=0;
}

# Local development server
server {
    listen 80;
    listen [::]:80;
    
    server_name localhost 127.0.0.1 closecall.local;
    
    # Logging
    access_log /var/log/nginx/closecall-local.access.log;
    error_log /var/log/nginx/closecall-local.error.log;
    
    client_max_body_size 2G;
    
    # Static files path
    root /home/eezis/code/closecall/nginx-root;
    
    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
    
    # Static files
    location /static/ {
        alias /home/eezis/code/closecall/nginx-root/static/;
        expires 1h;
        add_header Cache-Control "public";
    }
    
    # Media files
    location /media/ {
        alias /home/eezis/code/closecall/nginx-root/media/;
        expires 1h;
    }
    
    # Favicon
    location = /favicon.ico {
        alias /home/eezis/code/closecall/nginx-root/static/favicon.ico;
        expires 1h;
    }
    
    # Django application (development server or gunicorn)
    location / {
        try_files $uri @closecall_local;
    }
    
    location @closecall_local {
        proxy_pass http://closecall_local;
        
        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header REMOTE_ADDR $remote_addr;
        
        # Connection settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Security: deny access to sensitive files
    location ~ /\.(ht|env|git) {
        deny all;
        access_log off;
        log_not_found off;
    }
}
